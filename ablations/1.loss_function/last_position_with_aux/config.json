{
  "experiment_name": "last_position_with_aux",
  "description": "Ablation test for loss function applied at the last position, with auxiliary loss",
  "seed": 0,

  "model": {
    "vocab_size": 27,
    "d_model": 256,
    "n_heads": 4,
    "n_layers": 4,
    "mlp_ratio": 4,
    "seq_len": 128,

    "dropout": 0.0,
    "weight_decay": 0.0,
    "label_smoothing": 0.0,

    "mixed_precision": false,
    "pos_encoding": "none",
    "attention_type": "MHA",
    
    "use_auxiliary_loss": true,
    "aux_heads": 2,
    "aux_weight": 0.4,
    "loss_type": "last_position"
  },

  "throughput": {
    "max_test_iters": 1000,
    "max_test_time_in_seconds": 60,
    "compute_budget_hours": 2
  },

  "training": {
    "val_fraction": 0.01,
    "batch_size": 32,
    "learning_rate": 1e-3,
    "lr_schedule": "cosine_decay",
    "optimizer": "adam"
  }
}